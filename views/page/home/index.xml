<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="home_page" name="Home Page">
        <t t-call="website.layout">
            <t t-call="mpa_website.assets_css"/>
            <t t-call="mpa_website.assets_js"/>

            <t t-call="mpa_website.navbar"/>

            <t t-call="mpa_website.hero_home_section"/>
            <t t-call="mpa_website.about_home_section"/>
            <t t-call="mpa_website.video_home_section"/>
            <t t-call="mpa_website.product_home_section"/>
            <t t-call="mpa_website.pasir_home_section"/>
            <t t-call="mpa_website.guarantee_home_section"/>
            <t t-call="mpa_website.service_home_section"/>
            <t t-call="mpa_website.map_home_section"/>
            <t t-call="mpa_website.footer"/>

        </t>
    </template>

    <record id="action_home_page" model="ir.actions.act_url">
        <field name="name">Home Page</field>
        <field name="url">/home_page</field>
        <field name="target">self</field>
    </record>
</odoo>
