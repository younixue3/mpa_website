<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="iup_page" name="IUP Page">
        <t t-call="website.layout">
            <t t-call="mpa_website.assets_css"/>
            <t t-call="mpa_website.assets_js"/>

            <t t-call="mpa_website.navbar"/>

            <t t-call="mpa_website.hero_iup_section"/>
            <t t-call="mpa_website.about_iup_section"/>
            <t t-call="mpa_website.iup_iup_section"/>

            <t t-call="mpa_website.footer"/>

        </t>
    </template>

    <record id="action_iup_page" model="ir.actions.act_url">
        <field name="name">IUP Page</field>
        <field name="url">/iup</field>  
        <field name="target">self</field>
    </record>
</odoo>
