        <!-- Slider indicators -->
        <div class="flex justify-center space-x-3 my-5">
            <button type="button" class="w-3 h-3 rounded-full bg-black/50" aria-current="true" aria-label="Slide 1" data-carousel-slide-to="0"></button>
            <button type="button" class="w-3 h-3 rounded-full bg-black/50" aria-current="false" aria-label="Slide 2" data-carousel-slide-to="1"></button>
            <button type="button" class="w-3 h-3 rounded-full bg-black/50" aria-current="false" aria-label="Slide 3" data-carousel-slide-to="2"></button>
