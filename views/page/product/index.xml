<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="product_page" name="Product Page">
        <t t-call="website.layout">
            <t t-call="mpa_website.assets_css"/>
            <t t-call="mpa_website.assets_js"/>

            <t t-call="mpa_website.navbar"/>

            <t t-call="mpa_website.hero_product_section"/>
            <t t-call="mpa_website.video_product_section"/>
            <t t-call="mpa_website.material_product_section"/>
            <t t-call="mpa_website.proyek_product_section"/>

            <t t-call="mpa_website.footer"/>

        </t>
    </template>

    <record id="action_product_page" model="ir.actions.act_url">
        <field name="name">Product Page</field>
        <field name="url">/product</field>  
        <field name="target">self</field>
    </record>
</odoo>
