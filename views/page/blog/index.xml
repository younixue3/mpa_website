<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="blog_page" name="Blog Page">
        <t t-call="website.layout">
            <t t-call="mpa_website.assets_css"/>
            <t t-call="mpa_website.assets_js"/>

            <t t-call="mpa_website.navbar"/>

            <t t-call="mpa_website.hero_blog_section"/>
            <t t-call="mpa_website.blog_blog_section"/>

            <t t-call="mpa_website.footer"/>
        </t>
    </template>

    <record id="action_blog_page" model="ir.actions.act_url">
        <field name="name">Blog Page</field>
        <field name="url">/blog</field>
        <field name="target">self</field>
    </record>
</odoo>
